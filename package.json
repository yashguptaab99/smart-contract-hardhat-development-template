{
    "name": "smart-contract-hardhat-development-template",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/yashguptaab99/smart-contract-hardhat-development-template.git",
    "author": "Yash Gupta <yashguptaab99@gmail.com>",
    "license": "MIT",
    "scripts": {
        "compile": "npx hardhat compile",
        "contract-size": "npx hardhat size-contracts",
        "test": "npx hardhat test test/unit/*.test.ts --network hardhat",
        "test-staging": "npx hardhat test test/staging/*.test.ts --network goerli",
        "lint": "npx eslint . && npx solhint 'contracts/*.sol'",
        "lint:fix": "npx eslint . --fix &&npx solhint 'contracts/**/*.sol' --fix",
        "format": "prettier --write .",
        "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js",
        "prepare": "npx husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "@nomicfoundation/hardhat-ethers": "^3.0.0",
        "@nomicfoundation/hardhat-ignition": "^0.15.0",
        "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.0",
        "@openzeppelin/hardhat-upgrades": "^3.1.0",
        "@typechain/ethers-v6": "^0.5.0",
        "@typechain/hardhat": "^9.0.0",
        "@types/chai": "^4.2.0",
        "@types/mocha": ">=9.1.0",
        "@types/node": ">=18.0.0",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "chai": "^4.2.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-import-helpers": "^1.3.1",
        "eslint-plugin-prettier": "^5.1.3",
        "ethers": "^6.4.0",
        "hardhat": "^2.22.3",
        "hardhat-abi-exporter": "^2.10.1",
        "hardhat-contract-sizer": "^2.10.0",
        "hardhat-deploy": "^0.12.4",
        "hardhat-gas-reporter": "^1.0.8",
        "husky": "^9.0.11",
        "mocha": "^10.4.0",
        "prettier": "^3.2.5",
        "prettier-plugin-solidity": "^1.3.1",
        "solc": "0.8.24",
        "solhint": "^5.0.1",
        "solidity-coverage": "^0.8.0",
        "ts-node": ">=8.0.0",
        "typechain": "^8.3.0",
        "typescript": ">=4.5.0"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^5.0.2"
    }
}
